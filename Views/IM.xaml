<UserControl x:Class="CegsSuerc.Views.IM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="http://schemas.aeonhacs.com/wpf"
             xmlns:local="clr-namespace:CegsSuerc.Views"
             mc:Ignorable="d">
    <Canvas Width="250" Height="105">
        <wpf:Chamber Canvas.Right="0" Canvas.Top="2"
            Data="M17,0 v86 M0,43 h17 M0,69 h17 M17,17 h43 M43,4 v30" 
            Component="Section.IM" />
        <Rectangle Style="{DynamicResource FittingShapeStyle}" Width="5" Height="3" Canvas.Right="41" Canvas.Top="0" IsHitTestVisible="False"/>
        <Rectangle Style="{DynamicResource FittingShapeStyle}" Width="5" Height="3" Canvas.Right="41" Canvas.Top="88" IsHitTestVisible="False"/>

        <wpf:Stub Orientation="Right" HorizontalAlignment="Left" Canvas.Top="-38" VerticalAlignment="Center" Canvas.Left="-3" />
        <wpf:Stub Orientation="Right" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="-3" Canvas.Top="212" />
        <wpf:ConvolutedTubing Data="M0,0 v-3 m0,0 v-47 a12.5,12.5 0 0 0 -12.5,-12.5 h-48 m0,0 h-3" HorizontalAlignment="Left" Canvas.Top="-38" VerticalAlignment="Center" Canvas.Left="1" />
        <wpf:ConvolutedTubing Data="M0,0 v3 m0,0 v137 a12.5,12.5 0 0 1 -12.5,12.5 h-48 m0,0 h-3" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="1" Canvas.Top="63" />
        <wpf:Chamber Data="M0,0 v34 M0,17 h17" Canvas.Left="60" Canvas.Top="28" />

        <wpf:StackingPanel x:Name="pressure" Orientation="Up" Width="59" Canvas.Right="-12" Canvas.Bottom="99" Spacing="5">
            <wpf:PressureSensor Component="pIM" Type="Port" />
            <wpf:PressureGauge Component="pIM" ContentStringFormat="0" />
        </wpf:StackingPanel>

        <wpf:Switch Component="IpFan1" IsOn="{Binding Component.Fan.IsOn, RelativeSource={RelativeSource Self}}" 
            Canvas.Right="84" Canvas.Top="38" Width="23" Height="67" />

        <wpf:InletPort Orientation="Left" d:PortType="FlowThrough" Component="IP1"
            d:QuartzFurnace=""
            Canvas.Right="60" Canvas.Top="35" />

        <wpf:InletPort Orientation="Left" d:PortType="Combustion" Component="IP2"
            d:QuartzFurnace="" d:SampleFurnace=""
            Canvas.Right="60" Canvas.Top="61" />
    </Canvas>
</UserControl>
